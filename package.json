{
  "name": "dennnis.se",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "dev": "webpack-dev-server",
    "test": "jest",
    "lint": "eslint 'src/{**/,}*.{js,ts,tsx}'",
    "prettier": "prettier --check 'src/{**/,}*.{js,ts,tsx}'"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "debug": false,
          "useBuiltIns": "usage",
          "corejs": 3,
          "targets": {
            "browsers": [
              "ie >= 11",
              "safari >= 12"
            ]
          }
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "extends": [
      "@iteam/eslint-config-iteam-node"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx",
          "**/*.ts",
          "**/*.js"
        ],
        "rules": {
          "no-undef": "off",
          "no-unused-vars": "off",
          "react/prop-types": "off",
          "space-before-function-paren": "off",
          "require-atomic-updates": "off"
        }
      }
    ],
    "rules": {
      "no-unexpected-multiline": "error",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx|js|jsxs)$"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "public",
      "src"
    ],
    "setupFiles": [
      "./jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ]
  },
  "author": "Dennis Pettersson <dennis.pettersson@gmail.se>",
  "dependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "7.13.8",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@iteam/eslint-config-iteam-node": "0.1.0",
    "@iteam/eslint-config-node": "0.3.0",
    "@types/node": "14.14.31",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.1",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "autoprefixer": "9.8.6",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.2",
    "core-js": "3.9.1",
    "css-loader": "3.5.3",
    "cssnano": "4.1.10",
    "eslint": "7.21.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "html-webpack-plugin": "4.5.2",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "2.2.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-entypo": "1.3.0",
    "react-inlinesvg": "2.2.2",
    "react-router-dom": "5.2.0",
    "react-three-fiber": "4.2.21",
    "style-loader": "2.0.0",
    "svg-inline-loader": "0.8.2",
    "tailwindcss": "1.9.6",
    "tailwindcss-animatecss": "1.0.7",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "typescript": "4.2.3",
    "webpack": "4.43.0",
    "webpack-cli": "4.5.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.10.8",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "26.0.20",
    "babel-jest": "26.6.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "react-test-renderer": "17.0.1",
    "source-map": "0.7.3",
    "source-map-loader": "1.1.3",
    "source-map-support": "0.5.19",
    "ts-node-dev": "1.1.6",
    "webpack-dev-server": "3.11.2"
  },
  "optionalDependencies": {
    "husky": "5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run prettier"
    }
  }
}
